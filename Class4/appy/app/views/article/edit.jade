extends ../layout

block content
  .row
    .medium-12.columns
      h1= title
      p Welcome to #{title}

  .row
    .medium-12.columns
      form(action='/articles/update', method='post')
        .field
          label(for='title') title:
          input(type='text', name='title', value='#{article.title}')
        .field
          label(for='text') text:
          textarea(name='text', value='#{article.text}') #{article.text}
        .field
          label(for='url') url:
          input(type='text', name='url', value='#{article.url}')
          input(type='hidden', name='id', value='#{article.id}')
        button(type='submit') update article
